<%- include('header') %>

<div class="ui grid">
  <div class="four wide column">
    <a class="avatar"
       href="/posts?author=<%= user._id %>"
       data-title="<%= user.name %> | <%= ({male: '男', female: '女', privacy: '保密'})[user.gender] %>"
       data-content="<%= user.bio %>">
      <img class="avatar" src="/img/<%= user.avatar %>">
    </a>
  </div>

  <div class="eight wide column">
    <form class="ui form segment" method="post" action="/posts/<%= comment.postId %>/comment/<%= comment._id %>/edit">
      <div class="field required">
        <label>留言</label>
        <textarea name="content" rows="15"><%= comment.content %></textarea>
      </div>
      <input type="submit" class="ui icon button" value="发布">
    </form>
  </div>
</div>

<%- include('footer') %>